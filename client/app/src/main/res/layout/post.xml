<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:isScrollContainer="true"
    tools:context="Book.PostActivity"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="366dp"
            android:layout_height="235dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/box_border_post"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/backButtonFromDetailPage">

            <TextView
                android:id="@+id/publication_Date_Text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                android:text="가격(판매가)"
                android:textColor="@color/black"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/publication_Date_Text" />

            <TextView
                android:id="@+id/UserPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:text="9000원"
                android:textColor="@color/black"
                android:textSize="16dp"
                app:layout_constraintStart_toEndOf="@+id/publication_Date_Text3"
                app:layout_constraintTop_toBottomOf="@+id/CourseView" />

            <TextView
                android:id="@+id/CourseView"
                android:layout_width="275dp"
                android:layout_height="16dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="13dp"
                android:text="역사와 비판적 사고(AAA)"
                android:textSize="15dp"
                app:layout_constraintStart_toEndOf="@+id/publication_Date_Text"
                app:layout_constraintTop_toBottomOf="@+id/Publication_Date_Text_View" />

            <TextView
                android:id="@+id/Publication_Date_Text_View"
                android:layout_width="274dp"
                android:layout_height="19dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="13dp"
                android:text="2020.04.21"
                android:textSize="15dp"
                app:layout_constraintStart_toEndOf="@+id/Publication_Date_Text"
                app:layout_constraintTop_toBottomOf="@+id/PublisherView" />

            <TextView
                android:id="@+id/PublisherView"
                android:layout_width="274dp"
                android:layout_height="19dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="13dp"
                android:text="한빛미디어"
                android:textSize="15dp"
                app:layout_constraintStart_toEndOf="@+id/PublisherText"
                app:layout_constraintTop_toBottomOf="@+id/AuthorView" />

            <TextView
                android:id="@+id/BookNameView"
                android:layout_width="274dp"
                android:layout_height="19dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="14dp"
                android:text="역사와 비판적 사고"
                android:textColor="@color/black"
                android:textSize="15dp"
                app:layout_constraintStart_toEndOf="@+id/BookNameTex"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/BookNameTex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:text="책 이름"
                android:textColor="@color/black"
                android:textSize="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/AuthorText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginTop="19dp"
                android:text="저자"
                android:textSize="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/BookNameTex" />

            <TextView
                android:id="@+id/publication_Date_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="13dp"
                android:text="수업명"
                android:textSize="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Publication_Date_Text" />

            <TextView
                android:id="@+id/Publication_Date_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="13dp"
                android:text="출판년도"
                android:textSize="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/PublisherText" />

            <TextView
                android:id="@+id/PublisherText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="13dp"
                android:text="출판사"
                android:textSize="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/AuthorText" />

            <TextView
                android:id="@+id/AuthorView"
                android:layout_width="274dp"
                android:layout_height="0dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="18dp"
                android:text="홍길동"
                android:textSize="15dp"
                app:layout_constraintStart_toEndOf="@+id/AuthorText"
                app:layout_constraintTop_toBottomOf="@+id/BookNameView" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/backButtonFromDetailPage"
            android:layout_width="37dp"
            android:layout_height="38dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:adjustViewBounds="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="?attr/actionModeCloseDrawable" />


        <TextView
            android:id="@+id/PostNameView"
            android:layout_width="324dp"
            android:layout_height="26dp"
            android:layout_marginTop="24dp"
            android:text="[게시글 제목]"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintStart_toEndOf="@+id/backButtonFromDetailPage"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/BookStateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="36dp"
            android:text="책 상태"
            android:textColor="@color/purple_500"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout2" />

        <TextView
            android:id="@+id/SellerMemoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="19dp"
            android:text="판매자 메모"
            android:textColor="@color/purple_500"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <EditText
            android:id="@+id/SellerMemoTextView"
            android:layout_width="385dp"
            android:layout_height="130dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/box_border"
            android:enabled="false"
            android:inputType="textMultiLine"
            android:text="아아아아아아아아아아아아아아아아아아"
            android:textColor="@color/black"
            android:textSize="14dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SellerMemoText" />

        <ImageView
            android:id="@+id/UserImageView"
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:adjustViewBounds="true"
            android:background="@drawable/image_border"
            android:src="@drawable/loading"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SellerMemoTextView" />

        <TextView
            android:id="@+id/UserNameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="8dp"
            android:text="판매자 별명"
            android:textSize="14dp"
            app:layout_constraintStart_toEndOf="@+id/UserImageView"
            app:layout_constraintTop_toBottomOf="@+id/SellerMemoTextView" />

        <TextView
            android:id="@+id/DealScoreText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:text="거래점수"
            android:textSize="14dp"
            app:layout_constraintStart_toEndOf="@+id/UserImageView"
            app:layout_constraintTop_toBottomOf="@+id/UserNameView" />

        <TextView
            android:id="@+id/DealScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:text="89"
            android:textColor="@color/purple_500"
            android:textSize="14dp"
            app:layout_constraintStart_toEndOf="@+id/DealScoreText"
            app:layout_constraintTop_toBottomOf="@+id/UserNameView" />

        <Button
            android:id="@+id/ChatButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="29dp"
            android:background="@drawable/btn_first"
            android:text="채팅하기"
            android:textColor="@color/black"
            android:textSize="14dp"
            app:backgroundTint="@null"
            app:layout_constraintStart_toEndOf="@+id/HeartLikeImage"
            app:layout_constraintTop_toBottomOf="@+id/SellerMemoTextView" />

        <ImageView
            android:id="@+id/HeartLikeImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="21dp"
            app:layout_constraintStart_toEndOf="@+id/DealScore"
            app:layout_constraintTop_toBottomOf="@+id/SellerMemoTextView"
            app:srcCompat="@drawable/heartlike" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="378dp"
            android:layout_height="168dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.571"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/BookStateText">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/ViewPager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></androidx.viewpager.widget.ViewPager>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>