<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="330dp"
        android:layout_height="241dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="228dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <EditText
            android:id="@+id/starname"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_marginTop="40dp"
            android:ems="10"
            android:hint="별명"
            android:inputType="textPersonName"
            android:textColor="#6E6E6E"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/schoolname" />

        <EditText
            android:id="@+id/schoolname"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_marginTop="64dp"
            android:ems="10"
            android:hint="학교명 "
            android:inputType="textPersonName"
            android:textColor="#6E6E6E"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/shcooladd"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="64dp"
            android:background="@drawable/btn_first"
            android:fontFamily="@font/nanum"
            android:text="등록"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/schoolname"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/nameadd"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="152dp"
            android:background="@drawable/btn_first"
            android:fontFamily="@font/nanum"
            android:text="등록"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/starname"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>